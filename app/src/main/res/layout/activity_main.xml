<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="3"
    android:orientation="vertical"
    android:background="@color/background"
    android:paddingHorizontal="60dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_police"
            app:riv_border_color="#333333"
            app:riv_corner_radius="60dp"
            app:riv_mutate_background="true"
            app:riv_oval="true"
             />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:text="QUÂN ĐÔI NHÂN DÂN VIỆT NAM"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/emailEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_icon_email"
                android:drawablePadding="7dp"
                android:fontFamily="@font/roboto"
                android:hint="Nhập email"
                android:lines="1"
                android:maxLines="1"
                android:paddingVertical="10dp"
                android:textColor="#000000"
                android:textColorHint="#d5d8de"
                android:textSize="20dp"></EditText>

            <EditText
                android:id="@+id/passEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_icon_pass"
                android:drawablePadding="7dp"
                android:fontFamily="@font/roboto"
                android:hint="*********"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:paddingVertical="10dp"
                android:textColor="#000000"
                android:textColorHint="#d5d8de"
                android:textSize="20dp"></EditText>
            <CheckBox
                android:id="@+id/rememberCb"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#000000"
                tools:ignore="TouchTargetSizeCheck"
                android:text="Nhớ tài khoản"
                >
            </CheckBox>

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_radius_btn"
                android:backgroundTint="#3de890"
                android:fontFamily="@font/roboto"
                android:paddingHorizontal="40dp"
                android:text="ĐĂNG NHẬP"
                android:textColor="#000000"
                android:textSize="20dp">

            </Button>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn chưa có tài khoản?"
                android:textColor="#000000"
                android:layout_gravity="center"
                >
            </TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#3de890"
                android:text="ĐĂNG KÍ"
                android:fontFamily="@font/roboto"
                android:textSize="20dp">

            </TextView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>